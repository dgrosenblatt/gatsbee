<div class="home-page-container">
  <div class="row">
    <div class="small-12 columns">
      <h1>Keep your club on the same page.</h1>
      <h2>GatsBee can help with your book club.</h2>
    </div>
  </div>

  <div class="row buttons">
    <button class="large-4 small-12 large-offset-1 columns">
      <%= link_to "FIND A CLUB", clubs_path %>
    </button>
    <button class="large-4 small-12 large-offset-2 columns end">
      <%= link_to "SIGN UP WITH GOOGLE", "/auth/google_oauth2" %>
    </button>
  </div>

  <div class="row stories">
    <div class="small-12 columns">
      <ul class="small-block-grid-3">
        <li>
          <p id="discover">
            Discover Books
            <br>
            <%= fa_icon("book 5x") %>
            <br>
            <%= fa_icon("arrow-circle-down 2x") %>
          </p>
        </li>
        <li>
          <p id="find">
            Find Outings
            <br>
            <%= fa_icon("coffee 5x") %>
            <br>
            <%= fa_icon("arrow-circle-down 2x") %>
          </p>
        </li>
        <li>
          <p id="engage">
            Engage in Discussion
            <br>
            <%= fa_icon("comments 5x") %>
            <br>
            <%= fa_icon("arrow-circle-down 2x") %>
          </p>
        </li>
      </ul>
    </div>
  </div>
</div>

<div id="story1">
  <div class="row">
    <div class="small-2 columns"><%= fa_icon("book 3x") %></div>
    <% Book.top_five.each do |book| %>
      <div class="small-2 columns">
        <%= image_tag book.medium_image %>
        <p><%= book.title %></p>
        <p><%= pluralize(book.clubs_count, "club")%> reading</p>
      </div>
    <% end %>
  </div>
  <h1>Discover books</h1>
</div>
<div id="story1A">
</div>
